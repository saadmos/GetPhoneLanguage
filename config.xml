<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.Saad.wakanda.phonegap.firstTest"
        version   = "0.0.35">
    <name>GET PhoneLanguage</name>

    <description>
        An application that gets contacts from DataStore and also from phone 
    </description>

    <author href="http://github.com/saadmos" email="saadmos06@gmail.com">
        Saad Mousliki
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
	<feature name="http://api.phonegap.com/1.0/contacts"/>

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
	<preference name="android-installLocation" value="preferExternal" />


    <icon src="icon.png" />

    <gap:splash src="splash.png"/>
</widget>
